generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
// 利用者集約
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
model users {
    id          String  @id
    name        String
    updated_at  DateTime    @updatedAt
    created_at  DateTime    @default(now())
    //
    lendingHistories lendingHistories[]
}

// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
// 書籍集約
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
model books {
    id          String  @id
    name        String
    author      String
    rating      Int
    updated_at  DateTime   @updatedAt
    created_at  DateTime   @default(now())
    //
    tags        tags[]
    lendingHistories lendingHistories[]
}

// One-to-many relations
// https://www.prisma.io/docs/concepts/components/prisma-schema/relations/one-to-many-relations
model tags {
    tag_name    String
    book_id     String
    //
    books   books @relation(fields: [book_id], references: [id])
    @@id([tag_name, book_id])
}

model lendingHistories {
    id          String  @id // 必要ないけどprismaの制約上必須
    book_id     String
    user_id     String
    checkoutAt  DateTime @default(now())
    returnAt    DateTime
    //
    users   users @relation(fields: [user_id], references: [id])
    books   books @relation(fields: [book_id], references: [id])
}
