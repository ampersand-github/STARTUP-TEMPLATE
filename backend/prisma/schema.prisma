generator client {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
// 利用者集約
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
model users {
    id          String  @id
    name        String
    updated_at  DateTime    @updatedAt
    created_at  DateTime    @default(now())
    //
    borrow_histories borrow_histories[]
}

model borrow_histories {
    id          String  @id
    book_id     String
    user_id     String
    start_at    DateTime @default(now())
    end_at      DateTime?
    //
    users   users @relation(fields: [user_id], references: [id])
    books   books @relation(fields: [book_id], references: [id])
}
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
// 書籍集約
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
model books {
    id          String  @id
    name        String
    author      String
    is_losting  Boolean   @default(false)
    is_privates Boolean   @default(false)
    updated_at  DateTime   @updatedAt
    created_at  DateTime   @default(now())
    //
    tags        tags[]
    borrow_histories borrow_histories[]
}


// One-to-many relations
// https://www.prisma.io/docs/concepts/components/prisma-schema/relations/one-to-many-relations
model tags {
    tag_name    String
    book_id     String
    //
    books   books @relation(fields: [book_id], references: [id])
    @@id([tag_name, book_id])
}

